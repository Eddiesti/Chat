<Window x:Class="ChatDesctop.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatDesctop"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="421,70,0,0" VerticalAlignment="Top" Height="32" Width="86" Click="Send_Click"/>
        <TextBox x:Name="Message" HorizontalAlignment="Left" Margin="127,70,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Height="32"/>
        <ListBox x:Name="ChatBox" Margin="127,117,70,10"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="562,70,0,0" VerticalAlignment="Top" Height="32" Width="86" Click="Exit_Click"/>
        <ListBox x:Name="UserBox" Margin="10,92,688,10"/>
        <Label Content="Пользователи" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.283,0.599" Width="102" Height="26"/>

    </Grid>
</Window>
